<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <Button
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置导览顺序"
                android:textSize="28sp"
                android:textColor="#000"
                android:layout_alignBottom="@+id/btn_return"
                android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/ll_scene_exist"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充电座"
                android:textColor="#000"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置点"
                android:textColor="#000"
                android:textSize="22dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scene_exist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/tv_position_order">
        <TextView
            android:id="@+id/tv_scene_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从已存在场景的位置点选择"
            android:textColor="#000"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_scene_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择场景"
            android:textColor="#000"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_position_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置位置点顺序："
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_above="@+id/et_position_order"/>

    <EditText
        android:id="@+id/et_position_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入位置点序号，中间用,隔开"
        android:layout_above="@+id/ll_below"/>

    <LinearLayout
        android:id="@+id/ll_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="#000"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#000"
                android:textSize="22dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>